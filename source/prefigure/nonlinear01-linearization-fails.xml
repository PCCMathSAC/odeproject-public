<prefigure xmlns="https://prefigure.org"
             label="linearization-fails">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[1] - (y[0]^2 + y[1]^2)*y[0], -y[0] - (y[0]^2 + y[1]^2)*y[1])</definition>
  <coordinates bbox="[-0.3,-0.3,0.3,0.3]">
    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-0.3,0.05,0.3),(-0.3,0.05,0.3))"/>

    <plot-de-solution function="f" t0="0" t1="100" 
          y0="(1,0)" axes="(y0,y1)" N="600"/>
    <plot-de-solution function="f" t0="0" t1="6" 
          y0="(1,0)" axes="(y0,y1)" N="600" arrow="yes"/>

  </coordinates>



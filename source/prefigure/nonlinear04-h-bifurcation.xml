<prefigure xmlns="https://prefigure.org"
             label="h-bifurcation">

<diagram dimensions="(300,300)" margins="5">
  <definition>g(t)=(-t^2,t)</definition>
  <coordinates bbox="[-1.5,-1.5,1.5,1.5]">
    <grid-axes xlabel="\alpha" ylabel="x"/>
      <parametric-curve function="g" domain="(-1.5,1.5)"/>

      <point p="(0,0)" size="4" fill="blue" stroke="none"></point>

      <label anchor="(0,0)" scale="0.8" color="blue" alignment="ne">
            <it>Bifurcation Point</it>
      </label>

      <label anchor="(-0.7,1.3)" scale="0.8" color="blue">
            <m>x = \sqrt{-\alpha}</m>, Saddle Point
      </label>

      <label anchor="(-0.7,-1.3)" scale="0.8" color="blue">
            <m>x = -\sqrt{-\alpha}</m>, Stable Equilibrium
      </label>
  </coordinates>


</diagram>

</prefigure>


<prefigure xmlns="https://prefigure.org"
             label="center-phase-portrait">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (2*y[1],-2*y[0])</definition>
 <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <plot-de-solution function="f" t0="0" t1="9" 
          y0="(-3,0)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

    <point p="(-3,0)" size="4" fill="blue" stroke="none"></point>
</coordinates>

    <!--
      <annotations>
      <annotation ref="figure"
            text="Direction field for the system x prime equals two times y and  y prime equals minus two times x.  The solution curve is a circle of radius three centered at the origin.  the solution curve is moving in a clockwise direction."/>
    </annotations>
    -->
</diagram>

</prefigure>



                  

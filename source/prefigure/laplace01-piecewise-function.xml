<prefigure xmlns="https://prefigure.org"
             label="piecewise-function">
  <diagram dimensions="(300,300)" margins="50">
  <definition>f(x) = 0.5*x^2 * sin(x)+0.5</definition>
  <definition>g(x) = 0</definition>  
  <definition>h(x) = f(x - 1)</definition>  
  <coordinates bbox="[-2,-4,5,5]">
    <grid-axes xlabel="t" ylabel="u(t)"/>

    <graph at="graphf" function='f'/>
    <graph at="graphg" function='g' domain="(-2,1)" stroke="red"/>
    <graph at="graphh" function='h' domain="(1,5)" stroke="red"/>

    <point p="(1,h(1))" size="4" fill="red" stroke="none"></point>
    <point p="(1,0)" size="4" fill="white" stroke="red"></point>

    <legend anchor="(bbox[2]-1, bbox[3]-1)"
       scale="0.6" opacity="0.5">
      <item ref="graphf"><m>f(t)</m></item>
      <item ref="graphg"><m>u_a(t)f(t-a)</m></item>
    </legend>
  </coordinates>


    <!--
    <annotations>
      <annotation ref="figure"
        text="The graph of a function f(t) and the graph of a function u sub 1 of t times f of t minus 1. This is the graph of f(t) shifted to the right by 1 unit except the graph is zero for t less than 1. "/>
    </annotations>
-->
</diagram>
</prefigure>
  

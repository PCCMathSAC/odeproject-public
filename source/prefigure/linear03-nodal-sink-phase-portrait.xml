<prefigure xmlns="https://prefigure.org"
             label="nodal-sink-phase-portrait">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (-5*y[0] - 2*y[1],-y[0]-4*y[1])</definition>
 <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <plot-de-solution function="f" t0="0" t1="4" 
          y0="(-4,1)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(4,-1)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(2,4)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-1,-4)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <line endpoints="((-4,4), (4,-4))" stroke="red"
      thickness="3"/>
    <line endpoints="((-4,-8/3), (4,8/3))" stroke="red"
      thickness="3"/>
</coordinates>

    <!--
      <annotations>
      <annotation ref="figure"
            text="Direction field for the system x prime equals minus five times x minus two times y and y prime equals minus x minus four times y. Straight-line solutions are plotted in the direction of the eigenvectors (1,-1) and (2,1).  Solution curves near the straight-line solution corresponding to (-1,1) approach the origin while solution curves near the straight-line corresponding to (3,1) have a trajectory that also leads to the origin at a faster rate."/>
    </annotations>
    -->

</diagram>

</prefigure>


<prefigure xmlns="https://prefigure.org"
label="spiral-source-phase-portrait">

      <diagram dimensions="(300,300)" margins="12">
            <definition>f(t,y) = (y[0]/10 +y[1],-y[0] + y[1]/10)</definition>
            <coordinates bbox="[-4,-4,4,4]">

                  <grid-axes xlabel="x(t)" ylabel="y(t)"/>
                  <slope-field function="f" system="yes" stroke="black"
                  arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>

                  <plot-de-solution function="f" t0="0" t1="20" 
                  y0="(0,1/2)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

                  <point p="(0,1/2)" size="4" fill="blue" stroke="none"></point>

            </coordinates>

            <!--
            <annotations>
            <annotation ref="figure"
            text="Direction field for the system x prime equals x divided by ten plus y and  y prime equals minus x plus y divided by 10.  The solution curve begins at (0,1/2) and spirals away from the origin in a clockwise direction.  "/>
            </annotations>
            -->
      </diagram>

</prefigure>

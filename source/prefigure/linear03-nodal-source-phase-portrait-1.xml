<prefigure xmlns="https://prefigure.org"
             label="nodal-source-phase-portrait-1">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (4*y[0] - 3*y[1],-y[0]+2*y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <plot-de-solution function="f" t0="0" t1="4" 
          y0="(0.02,0.0199999)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(0.0199999,0.02)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-0.02,-0.0199999)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-0.0199999,-0.02)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <line endpoints="((-4,-4), (4,4))" stroke="red"
      thickness="3"/>
    <line endpoints="((-4,4/3), (4,-4/3))" stroke="red"
      thickness="3"/>
</coordinates>
</diagram>

</prefigure>


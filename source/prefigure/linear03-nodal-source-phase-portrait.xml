<prefigure xmlns="https://prefigure.org"
             label="nodal-source-phase-portrait">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (2*y[0],y[1])</definition>
 <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <plot-de-solution function="f" t0="0" t1="4" 
          y0="(0.01,0.1)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-0.01,0.1)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(0.01,-0.1)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-0.01,-0.1)" axes="(y0,y1)" arrows="1" stroke="blue"/>

</coordinates>

    <!--
      <annotations>
      <annotation ref="figure"
            text="Direction field for the system x prime equals two times x and y prime equals y. Straight-line solutions are along the x and y axes.  Solution curves lead away from the origin at a faster rate in the x direction than the y direction."/>
    </annotations>
    -->

</diagram>

</prefigure>


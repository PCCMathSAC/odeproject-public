<prefigure xmlns="https://prefigure.org"
             label="change-of-coordinates-2">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[0] + 2*y[1], 4*y[0] + 3*y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
       <plot-de-solution function="f" t0="0" t1="2" 
       y0="(-4,3.99)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="2" 
       y0="(-3.99,4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="2" 
       y0="(4,-3.99)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="2" 
       y0="(3.99,-4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
 
  </coordinates>
</diagram>

</prefigure>



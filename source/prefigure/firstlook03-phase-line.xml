<prefigure xmlns="https://prefigure.org"
             label="phase-line">

<diagram dimensions="(300,300)" margins="10">
  <coordinates bbox="(-2,0,2,10)">
    <line endpoints="((0,0), (0,10))" stroke="blue"
	  thickness="3"/>

    <line endpoints="((0,0), (0,5))" stroke="blue"
	  thickness="3" arrows="1"/>

    <line endpoints="((0,10), (0,8.5))" stroke="blue"
	  thickness="3" arrows="1"/>

     <line endpoints="((0,2), (0,1.5))" stroke="blue"
	  thickness="3" arrows="1"/>

    <point p="(0,3)" size="4"
	   fill="blue" stroke="blue"/>

    <point p="(0,7)" size="4"
	   fill="blue" stroke="blue"/>

    <label alignment="east" anchor="(0.5,7)"><m>P = 160</m>is a sink</label>
    <label alignment="east" anchor="(0.5,3)"><m>P = 40</m> is a source</label>

  </coordinates>

<!--
    <annotations>
      <annotation ref="figure"
        text="A phase line where P is decreasing until 40 then increasing until 160 and decreasing above 160 with P equals 40 is a source and P equals 160 a sink "/>
    </annotations>
    -->
</diagram>
</prefigure>

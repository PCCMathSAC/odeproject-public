<diagram dimensions="(500,400)" margins="10">
  <coordinates bbox="(-3,-1,15,11)">

<!--left tank-->
    <label anchor="(2,1)">Tank <m>A</m></label>
    <ellipse center="(2,2)" axes="(2.5,0.5)" stroke="black" fill="lightblue"/>
    <rectangle lower-left="(-0.5,2)" dimensions="(5,6)" fill="lightblue"/>
    <ellipse center="(2,8)" axes="(2.5,0.5)" stroke="black" fill="lightblue"/>
    <line endpoints="((-0.5,8),(-0.5,2))"/>
    <line endpoints="((4.5,8),(4.5,2))"/>


<!--right tank-->    
    <label anchor="(10,1)">Tank <m>B</m></label>
    <ellipse center="(10,2)" axes="(2.5,0.5)" stroke="black" fill="lightblue"/>
    <rectangle lower-left="(7.5,2)" dimensions="(5,6)" fill="lightblue"/>
    <ellipse center="(10,8)" axes="(2.5,0.5)" stroke="black" fill="lightblue"/>
    <line endpoints="((7.5,8),(7.5,2))"/>
    <line endpoints="((12.5,8),(12.5,2))"/>

    <rectangle lower-left="(4.5,3)" dimensions="(3,0.5)" stroke="black" fill="lightblue"/>
    <rectangle lower-left="(4.5,6.5)" dimensions="(3,0.5)" stroke="black" fill="lightblue"/>

    <line endpoints="((5.5,6),(6.5,6))" thickness="1" arrows="1"/>
    <label anchor="(6,7.5)"><m>900 l/hr</m></label>

    <line endpoints="((6.5,4),(5.5,4))" thickness="1" arrows="1"/>
    <label anchor="(6,2.5)"><m>400 l/hr</m></label>
   
   <label anchor="(-1.5,9)"><m>500 l/hr</m></label>
   <line endpoints="((-2.5,8),(-2.5,7))" thickness="1" arrows="1"/>
    <path start="(-0.5,6.5)" stroke="black" closed="yes" fill="lightblue">
      <lineto point="(-1.5,6.5)"/>
      <arc center="(-1.5,7)" radius="0.5" range="(270,180)"/>
      <lineto point="(-2,8.5)"/>
      <horizontal distance="0.5"/>
      <vertical distance="-1.25"/>
      <arc center="(-1.25,7.25)" radius="0.25" range="(180,270)"/>
      <lineto point="(-0.5,7)"/>
    </path>

    <label anchor="(14,1)"><m>500 l/hr</m></label>
    <line endpoints="((14.5,2),(14.5,3))" thickness="1" arrows="1"/>

    <path start="(12.5,3.5)" stroke="black" closed="yes" fill="lightblue">
      <lineto point="(13.5,3.5)"/>
      <arc center="(13.5,3)" radius="0.5" range="(90,0)"/>
      <lineto point="(14,1.5)"/>
      <horizontal distance="-0.5"/>
      <vertical distance="1.25"/>
      <arc center="(13.25,2.75)" radius="0.25" range="(0,90)"/>
      <lineto point="(12.5,3)"/>
    </path>

  </coordinates>
</diagram>



    <line endpoints="((6,2),(7,2))" stroke="gray" thickness="1"/>
    <line endpoints="((6,0),(7,0))" stroke="gray" thickness="1"/>
    <line endpoints="((9,0),(10.25,0))" stroke="gray" thickness="1"/>

    <label anchor="(5,2)"><m>\text{mass } m</m></label>
    <label anchor="(8,0)"><m>\text{mass } m</m></label>
    <label anchor="(5,8)"><m>mg - kL = 0</m></label>

    <label anchor="(0,5)" alignment="west"><m>\text{length } \ell</m></label>
    <label anchor="(3.5,2.75)" alignment="west"><m>L</m></label>
    <label anchor="(6.5,1)" alignment="west"><m>x</m></label>
    <label anchor="(10.25,3.25)" alignment="east"><m>\ell + L + x</m></label>
    

  </coordinates>

<diagram dimensions="(600,400)" margins="10">
  <coordinates bbox="(-3,-1,12,10)">

    <path start="(2,7)" stroke="black">
      <lineto point="(2,3.5)"
	      decoration="coil; number=5 ; dimensions=(7,7)" />
    </path>

    <path start="(5,7)" stroke="black">
      <lineto point="(5,2.5)"
        decoration="coil; number=5 ; dimensions=(7,7)"/>
    </path>

    <path start="(8,7)" stroke="black">
      <lineto point="(8,0.5)"
        decoration="coil; number=5 ; dimensions=(7,7)"/>
    </path>    

    <rectangle center="(5,7)" dimensions="(13,1)"
         fill="lightblue" stroke="black"/>
  
    <rectangle center="(5,2)" dimensions="(2,1)"
	       fill="lightblue" stroke="black"/>

    <rectangle center="(8,0)" dimensions="(2,1)"
	       fill="lightblue" stroke="black"/>


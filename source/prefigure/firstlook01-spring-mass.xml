<prefigure xmlns="https://prefigure.org"
             label="spring-mass">
<diagram dimensions="(500,400)" margins="10">
  <coordinates bbox="(-3,-1,11,10)">
    <line endpoints="((-2,0),(10,0))"/>
    <line endpoints="((-2,5),(10,5))"/>
    <!--
    <line endpoints="((0,0),(0,4))"/>
    <line endpoints="((0,5),(0,9))"/>
    -->
    <path start="(0,6)" stroke="black">
      <lineto point="(7,6)"
	      decoration="coil; number=7 ; dimensions=(12,7)"/>
    </path>
    <path start="(0,1)" stroke="black">
      <lineto point="(4,1)"
	      decoration="coil; number=7 ; dimensions=(7,7)"/>
    </path>
    <rectangle center="(5,1)" dimensions="(2,2)"
	       fill="lightblue" stroke="black"/>
    <rectangle center="(8,6)" dimensions="(2,2)"
	       fill="lightblue" stroke="black"/>
    <rectangle center="(-1,2)" dimensions="(2,4)"
	       fill="lightblue" stroke="black"/>
    <rectangle center="(-1,7)" dimensions="(2,4)"
	       fill="lightblue" stroke="black"/>

    <line endpoints="((5,0),(5,9))" dash="6 6" stroke="gray"/>
    <group outline="tactile">
      <line endpoints="((5,4.9),(5,4.3))" stroke="black"/>
      <line endpoints="((8,4.9),(8,4.3))" stroke="black"/>
      <line endpoints="((5,4.7),(8,4.7))" stroke="black" arrows="2"
	    tactile-endpoint-offsets="(3,-3)"/>
    </group>

    <label anchor="(5,1)"><m>\text{mass}</m></label>
    <label anchor="(8,6)"><m>\text{mass}</m></label>
    <label anchor="(-1,2)"><m>\text{wall}</m></label>
    <label anchor="(-1,7)"><m>\text{wall}</m></label>
    <label anchor="(5,0)" alignment="south" offset="(0,-4)">
      <m>\text{Position at rest}</m>
    </label>
    <label anchor="(8,4.3)" alignment="south" offset="(0,-4)">
      <m>\text{Position } x(t) \text{ at time } t</m>
    </label>

  </coordinates>

  <annotations>
    <annotation ref="figure"
      text="A mass m attached by a spring to a wall and sliding back and forth on a frictionless surface"/>
  </annotations>
  
</diagram>
</prefigure>

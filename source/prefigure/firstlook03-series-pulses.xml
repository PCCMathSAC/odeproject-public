<prefigure xmlns="https://prefigure.org"
             label="series-pulses">

  <diagram dimensions="(300,300)" margins="(60,5,20,25)">
    <coordinates bbox="[0,-0.1,16,12.1]">
      <definition>f(t,y)=chi_oc(-inf,4,t)*20-y + chi_oc(8,12,t)*20-y</definition>
      <grid />
      <axes vlabels="(0, 3, 12)" decorations="no"/>

      <definition>gap = 1</definition>
      <slope-field function="f" arrows="yes" thickness="1" stroke="black" spacings="((0,gap,16),(0,gap,12))"/>
      <plot-de-solution function="f" t0="0" y0="0" t1="bbox[2]"
            max-step="0.1"/>

      <label anchor="(bbox[2],0)" alignment="e" offset="(8,0)">
        <m>t</m>
      </label>

      <label anchor="(-0.5,6)" offset="(-30,5)" rotate="90">
        <m>E(t)</m>
      </label>
    </coordinates>


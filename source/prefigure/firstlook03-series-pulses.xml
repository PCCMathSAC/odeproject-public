<prefigure xmlns="https://prefigure.org"
             label="series-pulses">
<diagram dimensions="(350,350)" margins="[50,20,20,5]">
  
  <coordinates bbox="(0,-1,16,20)">
    <rectangle lower-left="(bbox[0],bbox[1])"
         dimensions="(bbox[2],bbox[3])-(bbox[0],bbox[1])"
         stroke="gray" thickness="1"/>
    <grid/>
    <axes vlabels="(-3,1,3)" decorations="no"/>
    
    <label anchor="(bbox[2],0)" alignment="e" offset="(8,0)"><m>t</m></label>
    <label anchor="(0,0)" offset="(-30,0)" rotate="90"><m>E(t)</m></label>

    <definition>gap = 2</definition>

    <definition>E = 10</definition>
    <definition>f(t,y) = (E-y)</definition>
    <plot-de-solution function="f" t0="0" t1="4" y0="15"/>

    <slope-field function="f" stroke="black"
     spacings="((0,gap,3),(-1,gap,20))"
     arrow-width="5" arrow-angles="(30,75)"
     thickness="1" arrows="yes"/>

    <definition>E = 0</definition>
    <definition>f(t,y) = (E-y)</definition>
    <plot-de-solution function="f" t0="4" t1="8" y0="10"/>

    <slope-field function="f" stroke="black"
     spacings="((5,gap,7),(-1,gap,20))"
     arrow-width="5" arrow-angles="(30,75)"
     thickness="1" arrows="yes"/>

    <definition>E = 10</definition>
    <definition>f(t,y) = (E-y)</definition>
    <plot-de-solution function="f" t0="8" t1="12" y0="0"/>
    <slope-field function="f" stroke="black"
     spacings="((9,gap,11),(-1,gap,20))"
     arrow-width="5" arrow-angles="(30,75)"
     thickness="1" arrows="yes"/>

    <definition>E = 0</definition>
    <definition>f(t,y) = (E-y)</definition>
    <plot-de-solution function="f" t0="12" t1="16" y0="10"/>
    <slope-field function="f" stroke="black"
     spacings="((13,gap,16),(-1,gap,20))"
     arrow-width="5" arrow-angles="(30,75)"
     thickness="1" arrows="yes"/>

  </coordinates>
</diagram>
</prefigure>

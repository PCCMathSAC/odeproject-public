<prefigure xmlns="https://prefigure.org"
             label="step-function">
  <diagram dimensions="(300,300)" margins="50">
  <definition>f(x) = 1</definition>
  <definition>g(x) = 0</definition>  
  <coordinates bbox="[-4,-2,4,2]">
    <grid-axes xlabel="t" ylabel="u(t)"/>

    <graph at="graphf" function='f' domain="(0,4)"/>
    <graph at="graphg" function='g' domain="(-4,0)"/>
    <point p="(0,1)" size="4" fill="blue" stroke="none"></point>
    <point p="(0,0)" size="4" fill="white" stroke="blue"></point>

  </coordinates>

</diagram>
</prefigure>
  

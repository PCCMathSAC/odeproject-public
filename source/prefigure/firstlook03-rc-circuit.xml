<prefigure xmlns="https://prefigure.org"
             label="rc-circuit">

<diagram dimensions="(400,250)" margins="5">
  <coordinates bbox="(-2,0,12,9)">
    <path start="(0,0)" stroke="black" cliptobbox="no">
      <lineto point="(0,7.5)"/>
      <lineto point="(10,7.5)"
	      decoration="zigzag; number=5 ; dimensions=(15,10)"/>
      <lineto point="(10,0)"
	      decoration="capacitor; dimensions=(12,15)"/>
      <lineto point="(0,0)"/>
      
    </path>
    <definition>power=(0,3.5)</definition>
    <point p="power" size="20"
	   fill="white" stroke="black"/>

    <!--
    <path start="(3.5,3)" stroke="black" arrows="1">
      <cubic-bezier controls="((5,5.5),(6.5,3))"/>
    </path>
    -->

    <arc center="(5,3.75)" radius="1.25"
	 range="(180,0)" arrows="1"
	 stroke="black"/>

    <label anchor="(11,3.75)"><m>C</m></label>
    <label anchor="(5,8.5)"><m>R</m></label>
    <label anchor="power" alignment="west"
	   offset="(-20,0)"><m>E(t)</m></label>
    <label anchor="power" alignment="nw"
	   offset="(-5,20)"><m>+</m></label>
    <label anchor="power" alignment="sw"
	   offset="(-5,-20)"><m>-</m></label>
    <label anchor="(5,3.75)"><m>I(t)</m></label>

  </coordinates>

<!--
  <annotations>
      <annotation ref="figure"
        text="A closed circuit with a voltage source E, a resistor R, a capacitor C, and a current I"/>
    </annotations>
    -->
</diagram>
</prefigure>

<prefigure xmlns="https://prefigure.org"
             label="no-straight-line-solutions">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (-3*y[0] +y[1],-2*y[0] - y[1])</definition>
 <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <plot-de-solution function="f" t0="0" t1="3" 
          y0="(-4,1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

    <point p="(-4,1)" size="4" fill="blue" stroke="none"></point>
</coordinates>
</diagram>

</prefigure>

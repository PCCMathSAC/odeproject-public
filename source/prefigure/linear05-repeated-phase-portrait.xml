<prefigure xmlns="https://prefigure.org"
             label="repeated-phase-portrait">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (-y[0]+y[1], -y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>

    <plot-de-solution function="f" t0="0" t1="2" 
       y0="(1,3)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

    <line endpoints="((-4,0), (4,0))" stroke="blue"
    thickness="2"/>
    <line endpoints="((0,0), (2,0))" stroke="red"
    thickness="4" arrows="1"/>

    <point p="(1,3)" size="4" fill="blue" stroke="none"></point>

  </coordinates>
</diagram>

</prefigure>


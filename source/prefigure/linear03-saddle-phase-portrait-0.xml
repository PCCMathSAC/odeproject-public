<prefigure xmlns="https://prefigure.org"
             label="saddle-phase-portrait-0">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[0]+3*y[1], y[0] - y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <line endpoints="((-4,-4/3), (4,4/3))" stroke="blue"
    thickness="2"/>
    <line endpoints="((-4,4), (4,-4))" stroke="blue"
    thickness="2"/>
    <line endpoints="((0,0), (1,-1))" stroke="red"
    thickness="4" arrows="1"/>
    <line endpoints="((0,0), (3,1))" stroke="red"
    thickness="4" arrows="1"/>
  </coordinates>

  <!--
      <annotations>
      <annotation ref="figure"
            text="Direction field for the system x prime equals x plus 3 times y and y prime equals x minus y. Straight-line solutions are plotted in the direction of the eigenvectors (1,-1) and (3,1)."/>
    </annotations>
    -->
</diagram>

</prefigure>


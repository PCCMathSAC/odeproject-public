<prefigure xmlns="https://prefigure.org"
             label="pendulum-2">

<diagram dimensions="(300,300)" margins="30">
  <coordinates bbox="(-3,-3,7,7)">

  <line endpoints="((0,0), (0,6))" thickness="3"/>
  <line endpoints="((0,6), (3.2,0.6))" thickness="3"/>

<arc center="(0,6)" radius="2" range="(270,300)" 
	 stroke="black" thickness="1" arrows="1"/>

<arc center="(0,6)" radius="5" range="(270,300)" 
	 stroke="black" thickness="1" arrows="1" dash="4 4"/>

<circle center="(3.2,0.6)" radius="0.5" fill="white" stroke="black" thickness="2"/>

    <label anchor="(2.2,3)">
      <m>L</m>
    </label>

     <label anchor="(0.5,3.8)">
      <m>\theta</m>
    </label>

    <line endpoints="((3.2,0.6),(3.2,-2.9))" thickness="2" stroke="red" arrows="1"/>

      <line endpoints="((3.2,0.6),(1.65,-0.35))" thickness="2" stroke="red" arrows="1"/>

     <line endpoints="((1.65,-0.35),(3.2,-2.9))" thickness="1" stroke="red"/>

    <label anchor="(6,-0.5)" color="red">
      <m>mg</m>
    </label>

    <path start="(5.5,-0.5)" stroke="red" arrows="1" thickness="1">
      <quadratic-bezier controls="((4.3,-1),(3.6,-0.7))"/>
    </path>

        <label anchor="(-2,1)" color="red">
      <m>mg \sin \theta</m>
    </label>

    <path start="(-1.4,01.3)" stroke="red" arrows="1" thickness="1">
      <quadratic-bezier controls="((1,4),(2,0.5))"/>
    </path>

<path start="((1.9,-0.2))" stroke="red" thickness="1">
      <lineto point="(2.08,-0.5)"/>
        <lineto point="(1.85,-0.63)"/>
    </path>

  </coordinates>
</diagram>

</prefigure>



<prefigure xmlns="https://prefigure.org"
             label="bifurcation-diagram">


<diagram dimensions="(300,300)" margins="5">
  <definition>f1(x) = exp(x)/10</definition>
<definition>g(t)=(-t*(t-4), t)</definition>
  <coordinates bbox="[-1,-1,5,5]">
    <grid-axes xlabel="x" ylabel="\lambda"/>

    <group at="solutions">
      <parametric-curve function="g" domain="(-1/4, 17/4)"
          stroke="blue" thickness="3"/>
          <line endpoints="((1,-1),(1,5))" stroke="red" thickness="2" />
          <line endpoints="((1,-1),(1,4.5))" stroke="red" thickness="2" arrows="1"/>
          <line endpoints="((1,3),(1,2))" stroke="red" thickness="2" arrows="1"/>         
          <line endpoints="((1,-1),(1,-0.5))" stroke="red" thickness="2" arrows="1"/>

          <line endpoints="((2,-1),(2,5))" stroke="red" thickness="2" />
          <line endpoints="((2,-1),(2,4.5))" stroke="red" thickness="2" arrows="1"/>
          <line endpoints="((2,3),(2,2))" stroke="red" thickness="2" arrows="1"/>   
          <line endpoints="((2,-1),(2,-0.5))" stroke="red" thickness="2" arrows="1"/>

          <line endpoints="((3,-1),(3,5))" stroke="red" thickness="2" />
          <line endpoints="((3,-1),(3,4.5))" stroke="red" thickness="2" arrows="1"/>
          <line endpoints="((3,3),(3,2))" stroke="red" thickness="2" arrows="1"/>   
          <line endpoints="((3,-1),(3,-0.5))" stroke="red" thickness="2" arrows="1"/>

          <line endpoints="((4,-1),(4,5))" stroke="red" thickness="2" />
          <line endpoints="((4,-1),(4,4.5))" stroke="red" thickness="2" arrows="1"/>
          <line endpoints="((4,-1),(4,-0.5))" stroke="red" thickness="2" arrows="1"/>


          <line endpoints="((5,-1),(5,5))" stroke="red" thickness="2" />
          <line endpoints="((5,-1),(5,2))" stroke="red" thickness="2" arrows="1"/>

          <point p="(4,2)" size="5"> </point>
          <point p="(3,1)" size="5"> </point>
          <point p="(3,3)" size="5"> </point>
          <point p="(2,2-sqrt(2))" size="5"> </point>
          <point p="(2,2 + sqrt(2))" size="5"> </point>
          <point p="(1,2-sqrt(3))" size="5"> </point>
          <point p="(1,2 + sqrt(3))" size="5"> </point>
    </group>


  </coordinates>


</diagram>
</prefigure>
  

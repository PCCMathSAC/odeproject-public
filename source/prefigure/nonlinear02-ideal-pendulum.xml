<prefigure xmlns="https://prefigure.org"
             label="ideal-pendulum">

<diagram dimensions="(300,300)" margins="25">
  <definition>f(t,y) = (y[1], -sin(y[0]))</definition>
  <coordinates bbox="[-4*pi,-4,4*pi,4]">
    <grid-axes xlabel="\theta(t)" ylabel="v(t)" h-pi-format="yes"/>

    <definition>gap = 1/3</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4*pi,5*gap,4*pi),(-4,gap,4))"/>

    <definition>H(x,y) = y^2/2 - cos(x)</definition>
       <implicit-curve function="H" k="-3" stroke="cyan" />
    <implicit-curve function="H" k="-2" stroke="red" />
    <implicit-curve function="H" k="-1" stroke="green" />
    <implicit-curve function="H" k="0" stroke="purple" />
    <implicit-curve function="H" k="0.9" stroke="green" />
    <implicit-curve function="H" k="2" stroke="blue" />
    <implicit-curve function="H" k="3" stroke="magenta" />
  </coordinates>



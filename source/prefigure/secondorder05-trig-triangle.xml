<prefigure xmlns="https://prefigure.org"
             label="trig-triangle">

<diagram dimensions="(300,300)" margins="30">
  <coordinates bbox="(0,0,10,9)">
    <path start="(0,0)" stroke="black" thickness="1">
      <lineto point="(6,0)"/>
      <lineto point="(6,8)"/>
      <lineto point="(0,0)"/>
    </path>

    <label anchor="(1.4,4)">
      <m>\sqrt{A^2 + B^2}</m>
    </label>

     <label anchor="(6,4)" alignment="east">
      <m>B</m>
    </label>

    <label anchor="(3,0)" alignment="south">
      <m>A</m>
    </label>

     <label anchor="(1,0.5)">
      <m>\theta</m>
    </label>

    <arc center="(0,0)" radius="1.7" range="(0,53)" thickness="1"/>
  </coordinates>

        <!--
    <annotations>
      <annotation ref="figure"
      text="A right triangle with hypotenuse the square root of A squared plus B squared and an angle theta.  The adjacent leg has length A and the opposite leg has length B."/>
    </annotations>
    -->
</diagram>

</prefigure>


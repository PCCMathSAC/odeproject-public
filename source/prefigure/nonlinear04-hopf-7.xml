<prefigure xmlns="https://prefigure.org"
             label="hopf-7">

<diagram dimensions="(300,300)" margins="25">
  <definition>alpha = 1</definition>
  <definition>f(t,y) = (alpha*y[0] + 5*y[1] -y[0]*(y[0]^2 + y[1]^2), -5*y[0] + alpha*y[1] - y[1]*(y[0]^2 + y[1]^2))</definition>
  <coordinates bbox="[-2,-2,2,2]">
    <grid-axes xlabel="x(t)" ylabel="y(t)"/>


    <definition>gap = 1/4</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-2,gap,2),(-2,gap,2))"/>

    <plot-de-solution function="f" t0="0" t1="24" 
          y0="(-1.5,1.5)" axes="(y0,y1)" arrow="yes"  N="400"/>

    <point p="(-1.5,1.5)" size="4" fill="blue" stroke="none"></point>

    <plot-de-solution function="f" t0="0" t1="24" 
          y0="(-0.2,0.2)" axes="(y0,y1)" arrow="yes"  N="400" stroke="red"/>

      <point p="(-0.2,0.2)" size="4" fill="red" stroke="none"></point>

  </coordinates>


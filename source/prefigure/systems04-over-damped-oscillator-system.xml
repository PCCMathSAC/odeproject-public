<prefigure xmlns="https://prefigure.org"
             label="over-damped-oscillator-system">

<diagram dimensions="(300,300)" margins="25">
  <definition>f(t) = exp(-t) - exp(-2*t)</definition>
  <definition>g(t) =  -exp(-t) + 2*exp(-2*t)</definition>
  <coordinates bbox="[0,-1,5,1]">
    <grid-axes xlabel="t" ylabel="x(t),v(t)"/>
    <graph at="position" function='f' />
    <graph at="velocity" function='g' stroke="red" />


    <legend at="legend" anchor="(bbox[2], bbox[3])" 
	    alignment="sw" scale="0.8" opacity="0.5">
      <item ref="position"><m>x(t) = e^{-t} - e^{-2t}</m></item>
      <item ref="velocity"><m>v(t) = - e^{-t} + 2  e^{-2t}</m></item>
    </legend>
  </coordinates>
</diagram>
</prefigure>

<prefigure xmlns="https://prefigure.org"
             label="satiated-predator-prey-4">

 <diagram dimensions="(300,200)" margins="50">
  <definition>f(x) = 0.15/(1 - 0.5*x)</definition>
  <coordinates bbox="[0,0,1.5,0.6]">
    <grid-axes xlabel="\alpha" ylabel="x"/>

    <group at="graph-tangent">
      <graph at="graph" function='f' />
    </group>

      <point p="(0.85,f(0.85))" size="4" fill="blue" stroke="none"></point>

      <point p="(1.25,f(1.25))" size="4" fill="blue" stroke="none"></point>

      <label anchor="(0.9,f(0.85)-0.05)" scale="0.8" color="blue">
            <it>Bifurcation Point</it>
      </label>

   <label anchor="(1.33,f(1.25)-0.03)" scale="0.8" color="blue">
            <it>Bifurcation Point</it>
      </label>

      <label anchor="(0.45,0.25)" scale="0.8" color="blue">
          <it>Sink</it>
      </label>

      <label anchor="(0.85,0.35)" scale="0.8" color="blue">
          <it>Source</it>
      </label>

      <label anchor="(1.2,0.5)" scale="0.8" color="blue">
          <it>Sink</it>
      </label>

  </coordinates>


  <!--
      <annotations>
      <annotation ref="figure"
            text="Bifurcation diagram with the curve f(x) equal to 0.15 divided by the quantity 1 minus 0.5 times x.  Bifurcation values occur at approximately 0.85 and 1.2. For values of alpha betweeen 0.85 and 1.2 there exists a source otherwise there is a sink. "/>
    </annotations>
-->

</diagram>

</prefigure>

<prefigure xmlns="https://prefigure.org"
             label="nonpoly-phase-portrait">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[1],- y[1] - sin(y[0]))</definition>
  <coordinates bbox="[-5,-5,5,5]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-5,1/2,5),(-5,1/2,5))"/>

    <plot-de-solution function="f" t0="0" t1="20" 
          y0="(0.5,4)" axes="(y0,y1)"/>
    <plot-de-solution function="f" t0="0" t1="0.5" 
          y0="(0.5,4)" axes="(y0,y1)" arrow="yes"/>

    <plot-de-solution function="f" t0="0" t1="6" 
          y0="(1,-4)" axes="(y0,y1)" stroke="red"/>
    <plot-de-solution function="f" t0="0" t1="0.5" 
          y0="(1,-4)" axes="(y0,y1)" stroke="red" arrow="yes"/>

    <point p="(0.5,4)" size="4" fill="blue" stroke="none"></point>
    <point p="(1,-4)" size="4" fill="red" stroke="none"></point>
  </coordinates>

          <!--
    <annotations>
      <annotation ref="figure"
      text="Phase portrait for x prime equals y and y prime equals minus y minus sine of x.  There are two solution curves.   The first curve begins (0.5,4) and follows a path away from the origin.  The second curve begins at (1, -4) and spirals towards the origin."/>
    </annotations>
    -->
</diagram>

</prefigure>


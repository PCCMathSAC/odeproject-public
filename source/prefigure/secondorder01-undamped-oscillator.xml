<diagram dimensions="(300,300)" margins="25">
  <definition>f(t) = 2*cos(3*t) + (1/3)* sin(3*t)</definition>
  <definition>g(t) = cos(3*t) - 6*sin(3*t)</definition>
  <coordinates bbox="[0,-6.5,5.5,6.5]">
    <grid-axes xlabel="t" ylabel="x(t),v(t)"/>
    <graph at="position" function='f' />
    <graph at="velocity" function='g' stroke="red" />
    <legend at="legend" anchor="(bbox[2], bbox[3])" 
	    alignment="sw" scale="0.8" opacity="0.5">
      <item ref="position"><m>x(t)</m></item>
      <item ref="velocity"><m>v(t)</m></item>
    </legend>
  </coordinates>
</diagram>


  

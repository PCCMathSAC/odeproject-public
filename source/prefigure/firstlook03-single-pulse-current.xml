<prefigure xmlns="https://prefigure.org"
             label="single-pulse-current">
<diagram dimensions="(350,350)" margins="[50,20,20,5]">
  <definition>E(t) = 1</definition>
  <definition>f(t,y) = (E(t)-y)</definition>
  
  <coordinates bbox="(0,-3.1,6,3.1)">
    <rectangle lower-left="(bbox[0],bbox[1])"
         dimensions="(bbox[2],bbox[3])-(bbox[0],bbox[1])"
         stroke="gray" thickness="1"/>
    <grid/>
    <axes vlabels="(-3,1,3)" decorations="no"/>
    
    <label anchor="(bbox[2],0)" alignment="e" offset="(8,0)"><m>t</m></label>
    <label anchor="(0,0)" offset="(-30,0)" rotate="90"><m>E(t)</m></label>

    <definition>gap = 1/2</definition>
    <slope-field function="f" stroke="black"
     spacings="((0,gap,10),(-3,gap,3))"
     arrow-width="5" arrow-angles="(30,75)"
     thickness="1" arrows="yes"/>

    <definition>colors=['blue','red','green','magenta','orange']</definition>
    <repeat parameter="k=-2..2">
      <plot-de-solution function="f" t0="0" t1="3" y0="k"
      stroke="colors[k]"/>
    </repeat>

    <definition>E(t) = 0</definition>
      <plot-de-solution function="f" t0="3" t1="6" y0="0.90" stroke="blue"/>
      <plot-de-solution function="f" t0="3" t1="6" y0="0.95" stroke="red"/>
      <plot-de-solution function="f" t0="3" t1="6" y0="1.0" stroke="green"/>
      <plot-de-solution function="f" t0="3" t1="6" y0="1.05" stroke="magenta"/>
      <plot-de-solution function="f" t0="3" t1="6" y0="1.10" stroke="orange"/>

  </coordinates>
</diagram>
</prefigure>

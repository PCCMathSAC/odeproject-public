<prefigure xmlns="https://prefigure.org"
             label="single-pulse-current">


<diagram dimensions="(300,300)" margins="(20,5,20,25)">
  <coordinates bbox="[-0.5,-2,8,11]">
    <definition>f(t,y)=chi_oc(-inf,4,t)*10-y</definition>
    <grid-axes />
    <slope-field function="f" arrows="yes" thickness="1" stroke="black"/>
    <plot-de-solution function="f" t0="0" y0="10" t1="bbox[2]"
		      max-step="0.1"/>
    <plot-de-solution function="f" t0="0" y0="20" t1="bbox[2]"
		      max-step="0.1"
		      stroke="red"/>

    <label anchor="(bbox[2],0)" alignment="ne" offset="(4,0)">
      <m>t</m>
    </label>
    <label anchor="(0,bbox[3])" alignment="ne"><m>y(t)</m></label>
  </coordinates>
</diagram>

</prefigure>

<prefigure xmlns="https://prefigure.org"
             label="phase-shift">

<diagram dimensions="(400,250)" margins="25">
  <definition>f(t) = sin(4*t)</definition>
  <definition>g(t) = 3*sin(4*t) + 4*cos(4*t)</definition>
  <coordinates bbox="[0,-7,2,7]">
    <grid-axes xlabel="t" ylabel="y"/>
    <graph at="position" function='f' />
    <graph at="velocity" function='g' stroke="red" />

    <line endpoints="((3*pi/8,-6), (3*pi/8,6))" thickness="1"/>
    <line endpoints="((3*pi/8-0.231824,-6), (3*pi/8-0.231824,6))" thickness="1"/>
    <line endpoints="((3*pi/8,4), (3*pi/8-0.231824,4))" thickness="2" arrows="2"/>

    <label anchor="(1.4,4.2)">
      <m>0.231824</m>
    </label>

    <legend at="legend" anchor="(bbox[2], bbox[1]+1.5)" 
	    alignment="sw" scale="0.8" opacity="0.5">
      <item ref="position"><m>\sin(4t)</m></item>
      <item ref="velocity"><m> 3\sin(4t) + 4\cos(4t)</m></item>
    </legend>
  </coordinates>

        <!--
    <annotations>
      <annotation ref="figure"
      text="A plot of the oscillating portion (not damped) of  sine of 4 times t plus 4 times cosine of 4 times t with its simple frequency curve sine of omega times t. The phase angle of 0.2318 radians from bottom to bottom."/>
    </annotations>
    -->

</diagram>

</prefigure>
  

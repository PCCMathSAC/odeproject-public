<prefigure xmlns="https://prefigure.org"
             label="hopf-2">

<diagram dimensions="(300,300)" margins="25">
  <definition>alpha = -16</definition>
  <definition>f(t,y) = (alpha + y[0]^2, -y[1])</definition>
  <coordinates bbox="[-10,-10,10,10]">
    <grid-axes xlabel="x(t)" ylabel="y(t)"/>


    <definition>gap = 2</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-10,gap,10),(-10,gap,10))"/>

    <plot-de-solution function="f" t0="0" t1="2" 
          y0="(-9,9)" axes="(y0,y1)" arrow="yes"  N="400"/>

      <point p="(-9,9)" size="4" fill="blue" stroke="none"></point>

  </coordinates>

        <!--
      <annotations>
      <annotation ref="figure"
            text="Phase plane for the system of differential equation x prime equals alpha plus x squared and y prime equals minus y for alpha equals minus 16."/>
    </annotations>
-->
</diagram>

</prefigure>


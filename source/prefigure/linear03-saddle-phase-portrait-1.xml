<prefigure xmlns="https://prefigure.org"
             label="saddle-phase-portrait-1">

  <diagram dimensions="(300,300)" margins="12">
    <definition>f(t,y) = (-y[0],y[1])</definition>
    <coordinates bbox="[-4,-4,4,4]">

      <grid-axes xlabel="x(t)" ylabel="y(t)"/>
      <slope-field function="f" system="yes" stroke="black"
       arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
      
      <plot-de-solution function="f" t0="0" t1="4" 
            y0="(4,0.1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="4" 
        y0="(-4,0.1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="4" 
        y0="(4,-0.1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="4" 
        y0="(-4,-0.1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
  </coordinates>

    <!--
      <annotations>
      <annotation ref="figure"
            text="Direction field for the system x prime equals minus x and y prime equals y. Solution curves in the shape of a hyperbola are plotted in each quadrant with each solution curve approaching zero in the x direction and positive or negative infinity in the y direction."/>
    </annotations>
    -->

  </diagram>
</prefigure>


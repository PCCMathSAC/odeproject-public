<prefigure xmlns="https://prefigure.org"
             label="saddle-phase-portrait-2">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[0] + 3*y[1],y[0]-y[1])</definition>
  <coordinates bbox="[-3.5,-3.5,3.5,3.5]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-3,1/2,3),(-3,1/2,3))"/>
    
    <plot-de-solution function="f" t0="0" t1="4" 
          y0="(-3,2.9)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-2.9,3)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(3,-2.9)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(2.9,-3)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <line endpoints="((-3,-1), (3,1))" stroke="red"
      thickness="3"/>
    <line endpoints="((-3,3), (3,-3))" stroke="red"
      thickness="3"/>
</coordinates>
</diagram>

</prefigure>


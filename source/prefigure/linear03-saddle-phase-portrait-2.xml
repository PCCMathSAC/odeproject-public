<prefigure xmlns="https://prefigure.org"
             label="saddle-phase-portrait-2">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[0] + 3*y[1],y[0]-y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
    <plot-de-solution function="f" t0="0" t1="4" 
          y0="(-4,3.9)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(-3.9,4)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(4,-3.9)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="4" 
      y0="(3.9,-4)" axes="(y0,y1)" arrows="1" stroke="blue"/>

    <line endpoints="((-4,-4/3), (4,4/3))" stroke="red"
      thickness="3"/>
    <line endpoints="((-4,4), (4,-4))" stroke="red"
      thickness="3"/>
</coordinates>

    <!--
      <annotations>
      <annotation ref="figure"
            text="Direction field for the system x prime equals x plus three times y and y prime equals x minus y. Straight-line solutions are plotted in the direction of the eigenvectors (1,-1) and (3,1).  Solution curves near the straight-line solution corresponding to (-1,1) approach the origin while solution curves near the straight-line corresponding to (3,1) have a trajectory that leads away from the origin."/>
    </annotations>
    -->

</diagram>

</prefigure>


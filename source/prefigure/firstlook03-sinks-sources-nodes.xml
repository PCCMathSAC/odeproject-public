<prefigure xmlns="https://prefigure.org"
             label="sinks-sources-nodes">
             <diagram dimensions="(300,300)" margins="5">
  <definition>f(x) = x^2*(x + 2)*(x - 2)</definition>
  <coordinates bbox="[-3,-4.5,3,6]">
    <grid-axes xlabel="y" ylabel="dy/dt"/>

    <group at="graph-tangent">
      <graph at="graph" function='f' />
    </group>
  </coordinates>

  <annotations>
    <annotation ref="figure"
      text="A fourth degree polynomial with roots at -2, 0, and 2"/>
  </annotations>

</diagram>
</prefigure>
  

<prefigure xmlns="https://prefigure.org"
             label="trace-determinant-complex">

<diagram dimensions="(300,250)" margins="(35,30,50,30)">
  <coordinates bbox="(-4, -2, 4, 4)">
    <axes decorations="no">
      <xlabel><m>T</m></xlabel>
      <ylabel><m>D</m></ylabel>
    </axes>

    <definition>f(x)=x^2/4</definition>
    <graph function="f"/>

      <label anchor="(0,3)" scale="0.8">
            <it>Center</it>
      </label>

      <label anchor="(2.4,3)" scale="0.8">
            <it>Spiral Source</it>
      </label>

      <label anchor="(-2.4,3)" scale="0.8">
            <it>Spiral Sink</it>
      </label>

      <label anchor="(4,4)" alignment="n">
            <m>D = T^2/4</m>
      </label>

  </coordinates>

  <!--
      <annotations>
      <annotation ref="figure"
            text="A parabola D equals T squared divided by 4 in the TD plane.  On the D axis above the parabola are centers, above the parabola in the second quadrant are spiral sinks, above the axis in the first quadrant are spiral sources"/>
    </annotations>
    -->

</diagram>

</prefigure>


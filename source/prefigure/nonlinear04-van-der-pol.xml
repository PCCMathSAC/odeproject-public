<prefigure xmlns="https://prefigure.org"
             label="van-der-pol">

<diagram dimensions="(300,300)" margins="25">
  <definition>alpha = -1</definition>
  <definition>f(t,y) = (y[1], -y[0] + y[0]*(1 - y[0]^2)*y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">
    <grid-axes xlabel="x(t)" ylabel="y(t)"/>


    <definition>gap = 1/2</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,gap,4),(-4,gap,4))"/>

    <plot-de-solution function="f" t0="0" t1="8" 
          y0="(1.4,1.9)" axes="(y0,y1)" arrow="yes"  N="400"/>

      <point p="(1.5,2)" size="4" fill="blue" stroke="none"></point>

  </coordinates>
</diagram>

</prefigure>

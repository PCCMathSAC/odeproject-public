<prefigure xmlns="https://prefigure.org"
             label="competing-species">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (2*y[0]*(1-y[0]/2) - y[0]*y[1], 3*y[1]*(1 - y[1]/3) - 2*y[0]*y[1])</definition>
  <coordinates bbox="[0,0,4.5,4.5]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((0,1/4,4.5),(0,1/4,4.5))"/>

    <plot-de-solution function="f" t0="0" t1="5" 
          y0="(3.75,3)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
    <plot-de-solution function="f" t0="0" t1="0.4" 
          y0="(3.75,3)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
   
    <plot-de-solution function="f" t0="0" t1="5" 
          y0="(0.3,0.1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
    <plot-de-solution function="f" t0="0" t1="1.5" 
          y0="(0.3,0.1)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

    <plot-de-solution function="f" t0="0" t1="10" 
          y0="(2.5,4)" axes="(y0,y1)" stroke="blue" arrow="yes"/>
    <plot-de-solution function="f" t0="0" t1="0.4" 
          y0="(2.5,4)" axes="(y0,y1)" stroke="blue" arrow="yes"/>

    <point p="(3.75,3)" size="4" fill="blue" stroke="none"></point>
    <point p="(0.3,0.1)" size="4" fill="blue" stroke="none"></point>
    <point p="(2.5,4)" size="4" fill="blue" stroke="none"></point>
    <line endpoints="((0,0), (0,4.5))" stroke="green"
    thickness="3"/>
    <line endpoints="((2,0), (0,2))" stroke="green"
    thickness="3"/>
    <line endpoints="((0,0), (4.5,0))" stroke="red"
    thickness="3"/>
    <line endpoints="((1.5,0), (0,3))" stroke="red"
    thickness="3"/>
  </coordinates>
</diagram>
</prefigure>


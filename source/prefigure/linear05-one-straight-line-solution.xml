<prefigure xmlns="https://prefigure.org"
             label="one-straight-line-solution">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (2*y[0]+y[1], -y[0] + 4*y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>

    <plot-de-solution function="f" t0="0" t1="1.6" 
       y0="(0.1,0.05)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

    <line endpoints="((-4,-4), (4,4))" stroke="blue"
    thickness="2"/>
    <line endpoints="((0,0), (2,2))" stroke="red"
    thickness="4" arrows="1"/>

    <point p="(0,0)" size="4" fill="blue" stroke="none"></point>

  </coordinates>
</diagram>

</prefigure>

